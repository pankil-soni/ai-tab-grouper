{
  "manifest_version": 3,
  "name": "AI Tabs Grouper",
  "version": "1.0.0",
  "description": "Intelligently group your tabs using AI",
  "permissions": ["tabs", "tabGroups", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["http://localhost:5000/*"]
}